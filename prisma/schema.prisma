generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  nom       String
  username  String   @unique
  mail      String   @unique
  contact   String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(ELEVE)
  student   Student?
}

model Student {
  id            Int      @id @default(autoincrement())
  nom           String
  prenom        String
  dateNaissance DateTime
  adresse       String
  cin           String   @unique
  statut        Statut   @default(ETUDIANT)
  photo         String?
  userId        Int      @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  Inscription   Inscription[]
}

model Session {
  id        Int      @id @default(autoincrement())
  nom       String
  dateDebut DateTime
  dateFin   DateTime
  etat      Etat     @default(EN_COURS)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  niveaux   Niveau[]
}

enum Role {
  ADMIN
  ENSEIGNANT
  ELEVE
  ADMINISTRATION
}

enum Statut {
  ETUDIANT
  EMPLOYER
}

enum Etat {
  EN_COURS
  TERMINEE
  ANNULEE
  REPORTER
}



model Niveau {
  id        Int      @id @default(autoincrement())
  nom       String
  sessionId Int
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([sessionId, nom])

  Groupe    Groupe[]
}

model Groupe {
  id        Int      @id @default(autoincrement())
  nom       String
  effectif   Int
  type      Type     @default(LOCAL)
  niveauId  Int
  niveau    Niveau   @relation(fields: [niveauId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Inscription Inscription[]

  @@unique([niveauId, nom])
}

enum Type {
  LOCAL
  EN_LIGNE
  HYBRIDE
}

model Inscription {
  id           Int      @id @default(autoincrement())
  groupeId     Int
  eleveId      Int
  matricule     String   @unique
  etatFrais    EtatFrais @default(NON_PAYE)
  dateInscription DateTime @default(now())
  
  groupe       Groupe   @relation(fields: [groupeId], references: [id], onDelete: Cascade)
  eleve        Student  @relation(fields: [eleveId], references: [id], onDelete: Cascade)
  
  @@unique([groupeId, eleveId])
}

enum EtatFrais {
  PAYE
  NON_PAYE
  PARTIEL
}